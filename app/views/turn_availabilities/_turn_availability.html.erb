<div id="<%= dom_id turn_availability %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Date:</strong>
    <%= turn_availability.date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Engineer:</strong>
    <%= turn_availability.engineer_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Company:</strong>
    <%= turn_availability.company_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Turn:</strong>
    <%= turn_availability.turn_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this turn availability", turn_availability, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this turn availability', edit_turn_availability_path(turn_availability), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
